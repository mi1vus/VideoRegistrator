<UserControl x:Class="HttpInterface.ConnectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:httpInterface="clr-namespace:HttpInterface"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
			 d:DataContext="{d:DesignInstance httpInterface:ConnectionViewModel}">
	<StackPanel>
		<TextBox Text="{Binding ConnectionParameter.ServerIp}"
				 Margin="5"/>
		<TextBox Text="{Binding ConnectionParameter.Port}"
				 Margin="5"/>
		<TextBox Text="{Binding ConnectionParameter.Login}"
				 Margin="5"/>
		<TextBox Text="{Binding ConnectionParameter.Password}"
				 Margin="5"/>
	</StackPanel>
</UserControl>
