<UserControl x:Class="HttpInterface.UrlViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:httpInterface="clr-namespace:HttpInterface"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance httpInterface:UrlViewerViewModel}">
    <Grid>
            <TextBox Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
